# Example environment configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/heytex

# MinIO S3 Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=5434
MINIO_ACCESS_KEY=heytex_admin
MINIO_SECRET_KEY=heytex_minio_2024
MINIO_USE_SSL=false
MINIO_BUCKET=heytex

# Server
PORT=5433
NODE_ENV=production

# JWT Secret
JWT_SECRET=your-secret-key-here

# Frontend: prefer server-side TeXLive compilation when set to false
# Set to 'true' to force client-side WASM LaTeX engines
VITE_USE_WASM_LATEX=false

# Cloudflare (optional)
# CLOUDFLARE_TUNNEL_TOKEN=your-token-here
